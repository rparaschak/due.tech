---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Welcome to Your Landing Page',
  description: 'Build something amazing with this clean template.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#features',
        icon: 'tabler:rocket',
      },
      { text: 'Learn More', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      Welcome to Your <span class="text-accent dark:text-white">Landing Page</span>
    </Fragment>

    <Fragment slot="subtitle">
      This is a clean, simple starting point for your project. Customize this hero section with your own content, 
      add your features below, and build something amazing.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Ready to Build"
    subtitle="Start with these sample features and customize them for your project."
    items={[
      {
        title: 'Clean Template',
        description: 'A fresh start with minimal demo content, ready for your customization.',
        icon: 'tabler:template',
      },
      {
        title: 'Blog Ready',
        description: 'Full blog system included with RSS feed, categories, and tags support.',
        icon: 'tabler:article',
      },
      {
        title: 'Fast & Modern',
        description: 'Built with Astro and Tailwind CSS for excellent performance and developer experience.',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#features',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Build Something Amazing?
    </Fragment>

    <Fragment slot="subtitle">
      Start customizing this template with your own content and make it your own.
    </Fragment>
  </CallToAction>
</Layout>
