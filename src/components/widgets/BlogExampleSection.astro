---
import { Icon } from 'astro-icon/components';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
} = Astro.props;
---

<section class="bg-blue-100 dark:bg-slate-700 not-prose">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-6">
    <div class="flex items-start gap-3">
      <Icon name="tabler:bulb" class="w-6 h-6 flex-shrink-0 text-blue-600 dark:text-blue-400 mt-1" />
      <div class="flex-1">
        <div class="font-bold text-lg mb-2" set:html={title} />
        <div class="text-md" set:html={description} />
      </div>
    </div>
  </div>
</section>
